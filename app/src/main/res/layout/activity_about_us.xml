<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="30dp"
    tools:context=".AboutUsActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ABOUT ME"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="#a01836"
        android:fontFamily="@font/peydablackk"></TextView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="45dp"
            android:layout_marginStart="30dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="ساحل سیدیزدی"
                android:textSize="23sp"
                android:textStyle="bold"
                android:fontFamily="@font/peydamedium"
                ></TextView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="متولد 1383"
                android:textSize="20sp"
                android:fontFamily="@font/peydalight"
                ></TextView>
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="کرمان ، رفسنجان"
                android:textSize="20sp"
                android:fontFamily="@font/peydalight"

                ></TextView>
        </LinearLayout>

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            android:src="@mipmap/devepic"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="برنامه نویس پایتون"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/peydamedium"

            ></TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="علاقه مند به حوزه دیتا آنالیز"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/peydamedium"

            ></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/telegram"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/telegram"
                android:layout_alignParentStart="true"></ImageView>
            <ImageView
                android:layout_marginHorizontal="10dp"
                android:id="@+id/github"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/github"
                android:layout_alignParentEnd="true"></ImageView>

        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="این پروژه برای ارائه به\n درس برنامه نویسی اندروید\n در بهار 1403 طراحی و ساخته شده است.\nدانشگاه دولتی لار"
        android:textSize="17sp"
        android:fontFamily="@font/peydaregular"

        android:textStyle="bold"
        ></TextView>


</LinearLayout>